<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_125sdp"
    android:layout_height="@dimen/_128sdp"
    android:layout_marginEnd="@dimen/_8ssp"

    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_80sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="@dimen/_8ssp"
        android:id="@+id/imgCard"
        >

        <ImageView
            android:id="@+id/placeImg"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_80sdp"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            android:src="@drawable/travel4"
            />

    </androidx.cardview.widget.CardView>






    <TextView
        app:layout_constraintTop_toBottomOf="@id/imgCard"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/location"
        android:drawableStart="@drawable/ic_baseline_location_on_24"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:includeFontPadding="false"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/_4sdp"
        android:text="location"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/_10sdp"
        android:textColor="#03A9F4" />


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/imgCard"
    app:layout_constraintEnd_toEndOf="parent"
    android:id="@+id/ratLayout"
    android:gravity="center"
    android:layout_marginTop="@dimen/_3sdp"
    android:orientation="horizontal"
    android:layout_marginEnd="@dimen/_6ssp"
    >

    <TextView
        app:layout_constraintTop_toBottomOf="@id/placeName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/star"
        android:drawableStart="@drawable/ic_baseline_star_24"
        android:textAlignment="center"
        android:textColor="#6E6A6A" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/placeName"
        app:layout_constraintStart_toEndOf="@id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratings"
        android:includeFontPadding="false"
        android:layout_marginTop="@dimen/_2ssp"
        android:text="5"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/_12sdp"
        android:textColor="#6E6A6A" />

</LinearLayout>







    <TextView
        app:layout_constraintTop_toBottomOf="@id/ratLayout"
        android:id="@+id/placeName"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/_4sdp"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="@id/placeName"
        app:layout_constraintEnd_toEndOf="@id/placeName"
        android:paddingStart="@dimen/_4sdp"
        android:text="coxs bazar betch"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black" />















</androidx.constraintlayout.widget.ConstraintLayout>